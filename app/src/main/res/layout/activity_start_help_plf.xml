<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plf_EFF8F4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHelpContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.loancalculator.finance.manager.ui.PlfPointSelectView
                android:id="@+id/pointView"
                android:layout_width="48dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvGoHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="@string/plf_next"
                android:textColor="@color/plf_0ACE86"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>