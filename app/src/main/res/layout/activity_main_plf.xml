<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/plf_EFF8F4">

    <View
        android:id="@+id/topBarViewPlf"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/plf_til_home_bg_1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tilViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/llTableBo"
        app:layout_constraintTop_toBottomOf="@+id/topBarViewPlf" />

    <LinearLayout
        android:id="@+id/llTableBo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTbHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/plf_home"
            android:textColor="@color/color_plf_selector_0ace86_a8b0ab"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/plf_selector_home_main" />

        <TextView
            android:id="@+id/tvTbTools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/plf_tools"
            android:textColor="@color/color_plf_selector_0ace86_a8b0ab"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/plf_selector_home_tools" />

        <TextView
            android:id="@+id/tvTbCompare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/plf_compare"
            android:textColor="@color/color_plf_selector_0ace86_a8b0ab"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/plf_selector_home_compare" />

        <TextView
            android:id="@+id/tvTbMine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/plf_mine"
            android:textColor="@color/color_plf_selector_0ace86_a8b0ab"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/plf_selector_home_mine" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>