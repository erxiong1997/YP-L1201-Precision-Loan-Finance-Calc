<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".PlfDealApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrecisionLoanFinanceCalc">

        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity
            android:name=".StartPlfActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PrecisionLoanFinanceCalc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.loancalculator.finance.manager.activity.calc.PlfPersonalLoanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.PlfMainToolActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.set.PlfSetPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.set.PlfSetLanguageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.utils.PlfToolsTemperatureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.utils.PlfToolsWorldTimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.utils.PlfWorldTimeSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.other.PlfCurrencyUnitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.utils.PlfToolsUnitSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.utils.PlfToolsSpeedConvertActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.calc.PlfCalculateResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.compare.PlfComparePersonalLoanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.compare.PlfHistoryCalculateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.loancalculator.finance.manager.activity.calc.PlfBusinessLoanActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.loancalculator.finance.manager.activity.calc.PlfCalculateResultTwoActivity"
            android:screenOrientation="portrait"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/cache_file_plf" />
        </provider>
    </application>

</manifest>